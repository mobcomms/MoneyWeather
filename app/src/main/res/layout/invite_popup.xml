<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/invite_msg5"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:id="@+id/btnInviteKakao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/kakaotalk_btn" />

            <TextView
                style="@style/FontStyle.Black.Small"
                android:layout_marginTop="@dimen/space_xxxsmall"
                android:text="@string/share_kakaotalk" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnInviteMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/messege_btn" />

            <TextView
                style="@style/FontStyle.Black.Small"
                android:layout_marginTop="@dimen/space_xxxsmall"
                android:text="@string/share_sms" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnUrlCopy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/url_btn" />

            <TextView
                style="@style/FontStyle.Black.Small"
                android:layout_marginTop="@dimen/space_xxxsmall"
                android:text="URL" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
