<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.moneyweather.data.remote.response.RegionResponse.Data" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_side_margin"
        android:layout_marginRight="@dimen/default_side_margin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_white"
        android:orientation="vertical"
        android:padding="@dimen/default_side_margin">

        <TextView
            android:id="@+id/tvCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cur_pos"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textColor="@color/default_main_color"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="11dp"
            android:visibility="gone"
            android:background="@drawable/button_certification"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textColor="@color/grey_222"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="서울"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="-1dp"
            android:textAlignment="viewEnd"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textColor="@color/grey_222"
            android:textSize="18dp"
            android:text="@{model.weather.temp()}"
            app:layout_constraintLeft_toRightOf="@+id/tvName"
            app:layout_constraintBottom_toBottomOf="@+id/tvName"
            tools:text="21"
            />

        <TextView
            android:id="@+id/tvMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textColor="@color/grey_555"
            android:textSize="13dp"
            android:text="@{model.weather.minTemp()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            tools:text="19"
            />

        <View
            android:id="@+id/dot1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/grey_222"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toRightOf="@+id/tvMinTemp"
            app:layout_constraintTop_toTopOf="@+id/tvMinTemp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMinTemp"/>

        <TextView
            android:id="@+id/tvMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textColor="@color/grey_555"
            android:textSize="13dp"
            android:text="@{model.weather.maxTemp()}"
            app:layout_constraintLeft_toRightOf="@+id/dot1"
            app:layout_constraintBottom_toBottomOf="@+id/tvMinTemp"
            tools:text="30"
            />

        <View
            android:id="@+id/dot2"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/grey_222"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toRightOf="@+id/tvMaxTemp"
            app:layout_constraintTop_toTopOf="@+id/tvMaxTemp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMaxTemp"/>

        <TextView
            android:id="@+id/tvDustStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textSize="13dp"
            app:fineDust="@{model.weather.pm10Description}"
            app:layout_constraintLeft_toRightOf="@+id/dot2"
            app:layout_constraintBottom_toBottomOf="@+id/tvMinTemp"
            tools:text="매우나쁨"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@{model.weather.weatherImage()}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvName"
            app:layout_constraintBottom_toBottomOf="@+id/tvDustStatus"
            tools:src="@drawable/icon_weather_1"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>