<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.moneyweather.util.CommonUtils" />

        <variable
            name="vm"
            type="com.moneyweather.viewmodel.MyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg">

        <include
            android:id="@+id/iActionBar"
            layout="@layout/view_common_action_bar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:padding="18dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iActionBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/userLayout"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:background="@drawable/round_my_user_bg"
                    android:padding="18dp"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_default"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:combine="@{vm.user.email}"
                        app:layout_constraintBottom_toBottomOf="@id/ivProfile"
                        app:layout_constraintLeft_toRightOf="@id/ivProfile"
                        app:layout_constraintTop_toTopOf="@id/ivProfile"
                        app:more="@{@string/sir}"
                        tools:text="홍길동 님" />

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/my_modify_bg"
                        android:fontFamily="@font/spoqa_han_sans_neo_bold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:onClick="@{()->vm.onClickLogIn()}"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/ivProfile"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivProfile" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/line_color"
                        app:layout_constraintTop_toBottomOf="@id/ivProfile" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.7" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="1" />


                    <TextView
                        android:id="@+id/myPointDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/my_point"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        app:layout_constraintBottom_toBottomOf="@id/guideline2"
                        app:layout_constraintLeft_toLeftOf="@id/ivProfile"
                        app:layout_constraintTop_toTopOf="@id/guideline1" />

                    <ImageView
                        android:id="@+id/ivArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_small"
                        app:layout_constraintBottom_toBottomOf="@id/guideline2"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/guideline1" />

                    <TextView
                        android:id="@+id/myPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@drawable/img_point"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_bold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:onClick="@{()->vm.onClickMyPoint()}"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="@id/guideline2"
                        app:layout_constraintRight_toLeftOf="@id/ivArrow"
                        app:layout_constraintTop_toTopOf="@id/guideline1"
                        app:toPoint="@{vm.userPoint.currentPoint}"
                        tools:text="10,332P" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/inviteBanner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:onClick="@{()->vm.onClickInvite()}"
                    android:src="@drawable/invite_banner"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userLayout" />

                <LinearLayout
                    android:id="@+id/menuLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_side_margin"
                    android:background="@drawable/round_my_menu_bg"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_text_size_s"
                    app:layout_constraintTop_toBottomOf="@+id/inviteBanner">

                    <TextView
                        android:id="@+id/menuDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/menu"
                        android:textColor="@color/grey_a5"
                        android:textSize="14dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/layoutCoupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/menu_arrow"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:onClick="@{()->vm.onClickCoupon()}"
                        android:paddingHorizontal="22dp"
                        android:paddingVertical="14dp"
                        android:text="@string/my_coupon_box"
                        android:textColor="@color/grey_222"
                        android:textSize="15dp"
                        app:drawableStartCompat="@drawable/ic_coupon_my"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/menu_arrow"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:onClick="@{()->vm.onClickLogOut()}"
                        android:paddingHorizontal="22dp"
                        android:paddingVertical="14dp"
                        android:text="@string/logout"
                        android:textColor="@color/grey_222"
                        android:textSize="15dp"
                        app:drawableStartCompat="@drawable/ic_logout"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                    <TextView
                        android:id="@+id/tv_withdraw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/menu_arrow"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:onClick="@{()->vm.onClickWithdraw()}"
                        android:paddingHorizontal="22dp"
                        android:paddingVertical="14dp"
                        android:text="@string/withdraw"
                        android:textColor="@color/grey_222"
                        android:textSize="15dp"
                        app:drawableStartCompat="@drawable/ic_withdraw"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/menu_arrow"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:onClick="@{()->vm.onClickTerms()}"
                        android:paddingHorizontal="22dp"
                        android:paddingVertical="14dp"
                        android:text="@string/terms"
                        android:textColor="@color/grey_222"
                        android:textSize="15dp"
                        app:drawableStartCompat="@drawable/ic_terms"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/menu_arrow"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:onClick="@{()->vm.onClickPolicy()}"
                        android:paddingHorizontal="22dp"
                        android:paddingVertical="14dp"
                        android:text="@string/privacy"
                        android:textColor="@color/grey_222"
                        android:textSize="15dp"
                        app:drawableStartCompat="@drawable/ic_policy"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/menu_arrow"
                        android:drawablePadding="12dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:onClick="@{()->vm.onClickLocation()}"
                        android:paddingHorizontal="22dp"
                        android:paddingVertical="14dp"
                        android:text="@string/terms_of_location"
                        android:textColor="@color/grey_222"
                        android:textSize="15dp"
                        app:drawableStartCompat="@drawable/ic_location_my"
                        tools:ignore="UseCompatTextViewDrawableXml" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>