<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.moneyweather.viewmodel.StoreViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            android:id="@+id/iActionBar"
            layout="@layout/view_common_action_bar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_enable_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_side_margin"
            app:cardBackgroundColor="@color/my_point_layout_top_color"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/iActionBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/tv_enable_point_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableRight="@drawable/ic_info_b"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:text="@string/popup_available_point_title"
                    android:textColor="@color/my_point_text_color"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/enable_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textColor="@color/default_main_color"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:toPoint="@{vm.userAvailablePoint.currentAvailablePoint}"
                    tools:text="999,999P" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            style="@style/TabLayoutStyle"
            viewPager2SetupTabLayout="@{viewPager2}"
            android:layout_marginLeft="@dimen/default_side_margin"
            android:layout_marginRight="@dimen/default_side_margin"
            android:layout_marginTop="@dimen/default_side_margin"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_enable_point" />

        <View
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_size"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"/>



        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/default_side_margin"
            android:layout_marginRight="@dimen/default_side_margin"
            app:layout_constraintTop_toBottomOf="@id/empty_view"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>