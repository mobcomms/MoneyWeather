<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.moneyweather.viewmodel.FindIdViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <include
            android:id="@+id/iActionBar"
            layout="@layout/view_common_action_bar" />


            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_medium"
                android:layout_marginTop="@dimen/default_side_margin"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:includeFontPadding="false"
                android:text="@string/find_id_complete"
                android:textColor="@color/grey_222"
                android:textSize="24dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintTop_toBottomOf="@+id/iActionBar"
                app:layout_constraintStart_toStartOf="parent"
                 />

        <TextView
            android:id="@+id/idEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_medium"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:includeFontPadding="false"
            android:text="@string/id_email"
            android:textColor="@color/grey_222"
            android:textSize="14dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@+id/desc"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/emailBox"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="@dimen/space_medium"
            android:layout_marginEnd="@dimen/space_medium"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:includeFontPadding="false"
            android:textColor="@color/default_main_color"
            android:textSize="18dp"
            android:background="@drawable/round_lightgrey"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@+id/idEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="kokokok**@naver.com"
            />

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/icon_tiny_info"
            android:layout_marginStart="@dimen/space_medium"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/emailBox"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/pno_error"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:includeFontPadding="false"
            android:textColor="@color/greyish_brown"
            android:textSize="14dp"
            android:text="@string/find_id_complete_desc"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@+id/emailBox"
            app:layout_constraintStart_toEndOf="@+id/imgInfo"
            />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:text="@string/move_login"
            android:textColor="@color/white"
            android:enabled="true"
            android:background="@drawable/selector_find_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>