<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minHeight="50dp"
            android:paddingTop="@dimen/space_xxsmall"
            android:paddingBottom="@dimen/space_xxsmall"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="@dimen/font_medium"
            app:layout_constraintEnd_toStartOf="@+id/imgInputResult"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgInputResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_xxsmall"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edittext"
            app:layout_constraintTop_toTopOf="@+id/edittext"
            android:src="@drawable/ico_input_close"
            tools:visibility="visible" />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/line_edittext_under"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>