<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.moneyweather.viewmodel.MyPointViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/iActionBar"
            layout="@layout/view_common_action_bar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/pointLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_side_margin"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/iActionBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/my_point_layout_top_color"
                android:paddingTop="21dp"
                app:layout_constraintTop_toBottomOf="@+id/iActionBar">

                <LinearLayout
                    android:id="@+id/layout_total_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="@+id/point_layout_center_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_total_point_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_point"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:text="@string/my_total_point_title"
                        android:textColor="@color/my_point_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_bold"
                        android:textColor="@color/grey_222"
                        android:textSize="18dp"
                        app:toPoint="@{vm.userAvailablePoint.currentPoint}"
                        tools:text="999,999P" />

                </LinearLayout>

                <View
                    android:id="@+id/point_layout_center_line"
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="@color/grey_999"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/layout_enable_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/point_layout_center_line"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_enable_point_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_info_b"
                        android:drawablePadding="3dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:text="@string/my_enable_point_title"
                        android:textColor="@color/my_point_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/enable_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_bold"
                        android:textColor="@color/default_main_color"
                        android:textSize="18sp"
                        app:toPoint="@{vm.userAvailablePoint.currentAvailablePoint}"
                        tools:text="999,999P" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ddd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:text="@string/text_policy_point_info"
                    android:textColor="@color/grey_999"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/point_layout_center_line" />

                <TextView
                    android:id="@+id/store"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/my_point_layout_bottom_color"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:gravity="center"
                    android:onClick="@{()->vm.onClickStore()}"
                    android:text="@string/text_go_store"
                    android:textColor="@color/grey_222"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ddd" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:text="@string/usage_detail"
            android:textColor="@color/grey_222"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@+id/pointLayout"
            app:layout_constraintTop_toBottomOf="@+id/pointLayout" />

        <View
            android:id="@+id/lineNotice"
            style="@style/HorizontalLine"
            android:layout_marginLeft="@dimen/default_side_margin"
            android:layout_marginTop="13dp"
            android:layout_marginRight="@dimen/default_side_margin"
            app:layout_constraintEnd_toEndOf="@+id/pointLayout"
            app:layout_constraintStart_toStartOf="@+id/pointLayout"
            app:layout_constraintTop_toBottomOf="@+id/userInfo" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="@+id/pointLayout"
            app:layout_constraintTop_toBottomOf="@+id/lineNotice"
            app:tabBackground="@drawable/tab_bg_inset"
            app:tabGravity="center"
            app:tabIndicator="@drawable/tab_active_bg"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorGravity="center"
            app:tabIndicatorHeight="55dp"
            app:tabMode="auto"
            app:tabPaddingEnd="20dp"
            app:tabPaddingStart="20dp"
            app:tabRippleColor="@color/transparent"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/white">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accumulate" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/layRefresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerPoint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="vertical"
                    android:orientation="vertical"
                    app:adapter="@{vm.listAdapter}"
                    app:layoutManager=".util.LinearLayoutManagerWrapper"
                    tools:listitem="@layout/viewholder_point_history"
                    />

                <LinearLayout
                    android:id="@+id/layEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ico_caution" />

                    <TextView
                        android:id="@+id/txtEmpty"
                        style="@style/FontStyle.PinkishGrey"
                        android:layout_marginTop="@dimen/space_huge"
                        android:gravity="center"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/use_list_empty"
                        android:textSize="@dimen/font_dialog_title" />

                </LinearLayout>

            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>