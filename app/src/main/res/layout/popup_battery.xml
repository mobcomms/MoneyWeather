<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/flowerIV"
            android:layout_width="70dp"
            android:layout_height="96dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_flower"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:text="@string/popup_battery_title"
            android:textColor="@color/grey_222"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/flowerIV" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:text="@string/popup_battery_content"
            android:textColor="@color/greyish_brown"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTV" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>