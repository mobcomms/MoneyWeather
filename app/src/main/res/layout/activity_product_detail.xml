<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.moneyweather.viewmodel.ProductDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/iActionBar"
            layout="@layout/view_common_action_bar" />

        <View
            android:id="@+id/lineToolbar"
            style="@style/HorizontalLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iActionBar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="96dp"
                    android:layout_marginTop="@dimen/space_xsmall"
                    android:layout_marginEnd="96dp"
                    android:src="@drawable/img_store_sample"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtPlaceForSale"
                    style="@style/FontStyle.PinkishGrey.Small"
                    android:layout_marginTop="@dimen/space_xsmall"
                    android:includeFontPadding="true"
                    tools:text="스타벅스"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgProduct" />

                <TextView
                    android:id="@+id/txtProductName"
                    style="@style/FontStyle.Black.Large"
                    android:layout_marginTop="@dimen/space_tiny"
                    android:includeFontPadding="true"
                    tools:text="카페아메리카노 Tall"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtPlaceForSale" />

                <TextView
                    android:id="@+id/txtProductPrice"
                    style="@style/FontStyle.Black.Large"
                    android:layout_marginTop="@dimen/space_tiny"
                    android:includeFontPadding="true"
                    android:textColor="@color/default_main_color"
                    android:textStyle="bold"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtProductName"
                    tools:text="6,250P" />

                <View
                    android:id="@+id/lineProduct"
                    style="@style/HorizontalLine"
                    android:layout_marginTop="@dimen/space_xxxlarge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtProductPrice" />

                <TextView
                    android:id="@+id/txtOwnPointLabel"
                    style="@style/FontStyle.WarmGrey.Medium"
                    android:layout_marginStart="@dimen/space_medium"
                    android:layout_marginTop="@dimen/space_xsmall"
                    android:text="@string/own_point"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lineProduct" />

                <TextView
                    android:id="@+id/txtOwnPoint"
                    style="@style/FontStyle.Black.Medium"
                    android:layout_marginEnd="@dimen/space_medium"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    app:toPoint="@{vm.userPoint.currentPoint}"
                    tools:text="12,500P"
                    app:layout_constraintBottom_toBottomOf="@+id/txtOwnPointLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtOwnPointLabel" />

                <TextView
                    android:id="@+id/txtDueDateLabel"
                    style="@style/FontStyle.WarmGrey.Medium"
                    android:layout_marginStart="@dimen/space_medium"
                    android:layout_marginTop="@dimen/space_xxxsmall"
                    android:text="@string/due_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtOwnPointLabel" />

                <TextView
                    android:id="@+id/txtDueDate"
                    style="@style/FontStyle.Black.Medium"
                    android:layout_marginEnd="@dimen/space_medium"
                    android:shadowColor="@color/black"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    tools:text="90일"
                    app:layout_constraintBottom_toBottomOf="@+id/txtDueDateLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtDueDateLabel" />

                <View
                    android:id="@+id/linePoint"
                    style="@style/HorizontalLine"
                    android:layout_marginTop="@dimen/space_xsmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDueDateLabel" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/layTab"
                    style="@style/TabStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linePoint"
                    app:tabIndicatorFullWidth="false"
                    app:tabRippleColor="@color/transparent">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_description" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_precautions" />

                </com.google.android.material.tabs.TabLayout>

                <View
                    android:id="@+id/lineTab"
                    style="@style/HorizontalLine"
                    android:layout_marginTop="@dimen/space_xsmall"
                    app:layout_constraintBottom_toBottomOf="@+id/layTab"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/pagerDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lineTab" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/pagerDetail"
                    android:layout_marginTop="@dimen/space_medium"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnTerms"
                        style="@style/TextButtonStyle"
                        android:onClick="onClick"
                        android:text="@string/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/btnBusinessInfo"
                        style="@style/TextButtonStyle"
                        android:onClick="onClick"
                        android:text="@string/business_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    app:layout_constraintTop_toBottomOf="@id/bottom"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnPurchase"
            style="@style/ButtonStyle.Rect"
            android:layout_width="0dp"
            android:text="@string/purchase1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="onClick"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>