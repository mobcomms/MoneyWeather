<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.moneyweather.viewmodel.QaWriteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btnRegister"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_side_margin"
                >

                <ImageView
                    android:id="@+id/ic_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_setting_my"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />


                <TextView
                    android:id="@+id/txtEmailLabel"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="4dp"
                    android:text="@{vm.user.name}"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    app:layout_constraintStart_toEndOf="@+id/ic_my"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/ic_my"
                    app:layout_constraintTop_toTopOf="@+id/ic_my"
                    tools:text="홍길동(123@123.com) 님"
                    />

                

                <EditText
                    android:id="@+id/editTitle"
                    style="@style/WriteEditStyle"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/space_xxxlarge"
                    android:gravity="start|center_vertical"
                    android:hint="@string/qa_title_hint"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textColor="@color/grey_a5"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:maxLength="15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ic_my" />

                <TextView
                    android:id="@+id/titleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textColor="@color/grey_a5"
                    android:text="0/15"
                    android:textSize="13dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editTitle"
                    app:layout_constraintEnd_toEndOf="@+id/editTitle"
                    app:layout_constraintTop_toTopOf="@+id/editTitle"
                    />
                <EditText
                    android:id="@+id/editQaContent"
                    style="@style/WriteEditStyle"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/space_medium"
                    android:gravity="start|top"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textColor="@color/grey_a5"
                    android:textSize="15dp"
                    android:hint="@string/qa_content_hint"
                    android:imeActionLabel="@string/complete"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:minHeight="180dp"
                    android:maxLength="500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTitle"
                  />

                <TextView
                    android:id="@+id/contentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textColor="@color/grey_a5"
                    android:text="0/500"
                    android:textSize="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/editQaContent"
                    app:layout_constraintEnd_toEndOf="parent"

                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnFile"
                    style="@style/WriteEditStyle"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/space_large"
                    android:background="@drawable/shape_roundrect_outline_whitetthree_10"
                    android:fontFamily="@font/spoqa_han_sans_neo_medium"
                    android:textColor="@color/grey_a5"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contentCount">

                    <TextView
                        android:id="@+id/txtFileLabel"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="@dimen/space_medium"
                        android:text="@string/qa_file_add"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textColor="@color/grey_74"
                        android:textSize="15dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imgFile"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/txtFileName"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="@dimen/space_medium"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textColor="@color/grey_74"
                        android:textSize="15dp"
                        android:visibility="gone"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imgFile"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="다운로드.png" />

                    <ImageView
                        android:id="@+id/imgFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_fileupload"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/groupFileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="fileProgress,txtCurrentSize,txtMaxSize"
                     />

                <ProgressBar
                    android:id="@+id/fileProgress"
                    style="@android:style/Widget.Material.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progressDrawable="@drawable/progressbar_point"
                    android:secondaryProgress="100"
                    app:layout_constraintBottom_toBottomOf="@+id/txtMaxSize"
                    app:layout_constraintEnd_toStartOf="@+id/txtCurrentSize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtMaxSize" />

                <TextView
                    android:id="@+id/txtCurrentSize"
                    style="@style/FontStyle.Black.Small"
                    android:layout_marginStart="@dimen/space_medium"
                    android:layout_marginEnd="@dimen/space_xxxxsmall"
                    android:textColor="@color/grey_222"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtMaxSize"
                    app:layout_constraintEnd_toStartOf="@+id/txtMaxSize"
                    app:layout_constraintStart_toEndOf="@+id/fileProgress"
                    app:layout_constraintTop_toTopOf="@+id/txtMaxSize"
                    tools:text="2MB" />

                <TextView
                    android:id="@+id/txtMaxSize"
                    style="@style/FontStyle.PinkishGrey.Small"
                    android:layout_marginTop="@dimen/space_medium"
                    android:text="/ 1MB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtCurrentSize"
                    app:layout_constraintTop_toBottomOf="@+id/btnFile" />

                <TextView
                    android:id="@+id/txtCaution"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xsmall"
                    android:includeFontPadding="true"
                    android:text="@string/qa_file_caution"
                    android:maxLines="1"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textColor="@color/grey_74"
                    android:textSize="13dp"
                    android:visibility="gone"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtMaxSize"
                    app:layout_goneMarginTop="@dimen/space_medium" />


                <LinearLayout
                    android:id="@+id/btnTerms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_medium"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtCaution">

                    <ImageView
                        android:id="@+id/imgCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:src="@drawable/selector_checkbox" />

                    <TextView
                        style="@style/FontStyle.Black.Medium"
                        android:layout_width="0dp"
                        android:layout_marginStart="@dimen/space_xsmall"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textColor="@color/grey_74"
                        android:textSize="13dp"
                        android:gravity="center_vertical"
                        android:text="@string/privacy" />

                    <TextView
                        android:id="@+id/btnPrivacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textColor="@color/grey_74"
                        android:textSize="15dp"
                        android:onClick="onClick"
                        android:text="@string/see" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtCaution_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xsmall"
                    android:layout_marginBottom="@dimen/space_huge"
                    android:includeFontPadding="true"
                    android:text="@string/qa_terms_introduce"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textColor="@color/grey_74"
                    android:textSize="13dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnTerms" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:text="@string/qa_register"
            android:textColor="@color/white"
            android:enabled="false"
            android:background="@drawable/selector_find_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>