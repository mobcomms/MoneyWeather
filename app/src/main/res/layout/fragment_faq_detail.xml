<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <include
            android:id="@+id/iActionBar"
            layout="@layout/view_common_action_bar" />

        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_margin="@dimen/default_side_margin"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textColor="@color/grey_222"
            android:textSize="18dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iActionBar"
            tools:text="FAQ제목"/>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAlignment="textStart"
            android:layout_margin="@dimen/default_side_margin"
            android:padding="18dp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textColor="@color/grey_555"
            android:textSize="15dp"
            android:background="@color/screen_bg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSubject"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="FAQ 본문"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>